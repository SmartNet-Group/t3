{% extends '@Blog/base.html.twig' %}

{% block body %}
    <p class="lead">Удаление выбранного пользователя # {{ uN }}</p>
    <form method="get" action={{ path('dblist') }}>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label text-right">Имя:</label>
            <input type="text" readonly class="form-control col-sm-10" placeholder={{ uName }}>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label text-right">e-Mail:</label>
            <input type="text" readonly class="form-control col-sm-10" placeholder={{ uEMail }}>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label text-right">Пароль:</label>
            <input type="text" readonly class="form-control col-sm-10" placeholder={{ uPass }}>
        </div>
        <div class="form-group row">
            <div class="col-sm-8 text-right">
                <button type="submit" name="btnSubmit" value="btnDelete" class="btn btn-primary">Удалить</button>
            </div>
            <div class="col-sm-4 text-right">
                <button type="submit" name="btnSubmit" value="btnNotDelete" class="btn btn-primary">Выйти без удаления</button>
            </div>
        </div>
        <input type="hidden" name="uNumber" value={{ uN }}>
        <input type="hidden" name="formName" value="UserDelete">
    </form>
{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href={{ asset('css/bootstrap.min.css') }}>
    <link rel="stylesheet" href={{ asset('css/skin.css') }}>
{% endblock %}

{% block javascript %}
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src={{ asset('js/jquery-3.2.1.slim.min.js') }}></script>
    <script src={{ asset('js/popper.min.js') }}></script>
    <script src={{ asset('js/bootstrap.min.js') }}></script>
{% endblock %}
