{% extends '@Blog/base.html.twig' %}

{% block body %}
    <p class="lead">Список всех пользователей</p>
    <p>{{ query }}</p>
    <p>Действие: {{ action }}</p>
    <p>Сессия: {{ start }}</p>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Имя</th>
                <th scope="col">e-Mail</th>
                <th scope="col">Пароль</th>
                <th scope="col">Команды</th>
            </tr>
        </thead>
        <tbody>
            {% if uList == null %}
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            {% else %}
                {% for i in 0..uNum-1 %}
                    <tr>
                        <td>{{ uList[i].userID }}</td>
                        <td>{{ uList[i].userName }}</td>
                        <td>{{ uList[i].userEMail }}</td>
                        <td>{{ uList[i].userPass }}</td>
                        <td><a href={{ path('edit', {uN:i}) }}>Ред-ть </a>
                            <a href={{ path('delete', {uN:i}) }}>Удалить</a>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href={{ asset('css/bootstrap.min.css') }}>
    <link rel="stylesheet" href={{ asset('css/skin.css') }}>
{% endblock %}

{% block javascript %}
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src={{ asset('js/jquery-3.2.1.slim.min.js') }}></script>
    <script src={{ asset('js/popper.min.js') }}></script>
    <script src={{ asset('js/bootstrap.min.js') }}></script>
{% endblock %}
